<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATTENDING QUIZ</title>

    <style>
        :root {
            --black: #000000;
            --white: #ffffff;
            --darkest: #101010;
            --darker: #16171A;
            --dark: #A3AFBF;
            --primary: #7B16FF;
            --primary-trans: rgba(123, 22, 255, 0.4);
            --bg: var(--darkest);
            --color: var(--white);
            --surface: var(--darker);
        }
        body {
            background: var(--bg);
            color: var(--color);
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 80vh;
            margin: 0;
        }
        .navbar {
            background: var(--surface);
            width: 95%;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .navbar h2 {
            color: var(--primary);
            margin: 0;
        }

        .navbar a {
            color: var(--white);
            text-decoration: none;
            margin-left: 1rem;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: var(--primary);
        }
        .quiz-container {
            background: var(--surface);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 800px;
            margin-top: 2rem;
        }

        h1,h2,h4 {
            text-align: center;
            color: var(--white);
        }

        .quiz-wrapper {
            display: flex;
            align-items: flex-start;
        }
        .sidebar {
            width: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-right: 1rem;
        }

        .sidebar button {
            background: var(--primary);
            color: var(--white);
            border: none;
            padding: 5px;
            width: 40px;
            margin-bottom: 5px;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            transition: background 0.3s;
        }

        .sidebar button:hover {
            background: var(--primary-trans);
        }

        .question-container {
            flex: 1;
        }

        .question-container strong {
            font-size: 1.2rem;
            display: block;
            margin-bottom: 10px;
        }
        ul {
            list-style: none;
            padding: 0;
        }

        label {
            display: flex;
            align-items: center;
            margin: 0.5rem 0;
            padding: 10px;
            background: var(--darker);
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        label:hover {
            background: var(--primary-trans);
        }

        input[type="radio"] {
            margin-right: 10px;
        }
        #submit-btn {
            display: none;
            width: 100%;
            padding: 10px;
            margin-top: 1rem;
            font-size: 1rem;
            font-weight: bold;
            color: var(--white);
            background: var(--primary);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
        }

        #submit-btn:hover {
            background: var(--primary-trans);
        }

        #submit-btn:active {
            transform: scale(0.95);
        }
        .hidden{
            display: none;
        }
        .visible{
            display: block;
        }

        @media (max-width: 768px) {
            .quiz-wrapper {
                flex-direction: column;
                align-items: center;
            }

            .sidebar {
                width: 100%;
                text-align: center;
                padding-bottom: 1rem;
            }

            .sidebar button {
                width: 40px;
                padding: 5px;
            }

            .question-container {
                width: 100%;
                margin-top: 10px;
            }
        }
    </style>
</head>

<body>

    <div class="navbar">
        <h2>QUIZIFY</h2>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Logout</a>
        </div>
    </div>

    <div class="quiz-container">
        <h1>Quiz on <%=data.topic%></h1>
        <h2>Code : <%=data.number%></h2>
        <h4>Created by <%=author%></h4>
        <div class="quiz-wrapper">
            <div class="sidebar">
                <% data.questions.forEach((question, index) => { %>
                    <button data-index="<%= index %>"><%= index + 1 %></button>
                <% }) %>
            </div>

            <div class="question-container">
                <form action="/attending" method="POST">
                    <% data.questions.forEach((question, index) => { %>
                        <div id="question_<%= index %>" class="<%= index === 0 ? 'visible' : 'hidden' %>">
                            <strong><%= question.question %></strong>
                            <ul>
                                <% question.options.forEach((option, i) => { %>
                                    <li>
                                        <label>
                                            <input type="radio" name="question_<%= index %>" value="<%= i %>">
                                            <%= option %>
                                        </label>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% }) %>
                    <center>
                    <button type="submit" id="submit-btn" style="width:40%">Submit</button>
                    </center>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const questionButtons = document.querySelectorAll("button[data-index]");
            const questions = document.querySelectorAll("div[id^='question_']");
            const submitButton = document.getElementById("submit-btn");

            questionButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const index = this.getAttribute("data-index");
                    questions.forEach(q => q.style.display = "none");
                    document.getElementById(`question_${index}`).style.display = "block";
                    submitButton.style.display = (index == questions.length - 1) ? "block" : "none";
                });
            });
        });
        /*
        document.addEventListener("visibilitychange", () => {
            if (document.hidden) {
                fetch('/logout', { method: 'POST', credentials: 'include' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = "/login";
                        }
                    });
            }
        });*/
    </script>

</body>

</html>
