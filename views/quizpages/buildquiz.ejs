<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>BUILD QUIZ</title>

    <style>
        :root {
            --black: #000000;
            --white: #ffffff;
            --darkest: #101010;
            --darker: #16171A;
            --dark: #A3AFBF;
            --primary: #7B16FF;
            --primary-trans: rgba(123, 22, 255, 0.4);
            --bg: var(--darkest);
            --color: var(--white);
            --surface: var(--darker);
        }

        body {
            background: var(--bg);
            color: var(--color);
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 80vh;
            margin: 0;
        }

        .navbar {
            background: var(--surface);
            width: 95%;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .navbar h2 {
            color: var(--primary);
            margin: 0;
        }

        .navbar a {
            color: var(--white);
            text-decoration: none;
            margin-left: 1rem;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: var(--primary);
        }

        .quiz-container {
            background: var(--surface);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 800px;
            margin-top: 2rem;
        }

        h1 {
            text-align: center;
            color: var(--white);
        }

        .question {
            background: var(--darker);
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        input[type="text"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
            border: none;
            background: var(--dark);
            color: var(--black);
        }

        .options-container {
            margin-top: 10px;
        }

        .option {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 5px 0;
        }

        .option input[type="radio"] {
            margin-right: 10px;
        }

        .buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        button {
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
            color: var(--white);
            background: var(--primary);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        button:hover {
            background: var(--primary-trans);
        }

        #submit-btn {
            display: none;
            width: 100%;
            margin-top: 1rem;
        }
    </style>
</head>

<body>

    <div class="navbar">
        <h2>QUIZIFY</h2>
        <div>
            <a href="/"><i class="fa-solid fa-house"></i> Home</a>
            <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
    </div>

    <div class="quiz-container">
        <h1>Create your own quiz</h1>
        <form id="quiz-form">
        <center>
        <label for="topic">Topic : 
             <input type="text" name="topic" id="topic" style="width:40%;" required>
        </label>
        </center>
        <center>
            <div id="questions-container"></div>
            <button type="button" id="add-question">Add Question</button>
            <button type="submit" id="submit-btn" style="width:30%;">Create Quiz</button>
        <br>
        <h2 id="msg"></h2></center>
        </form>
    </div>

    <script>
        let questionCount = 0;

        document.getElementById("add-question").addEventListener("click", function () {
            questionCount++;
            const questionContainer = document.createElement("div");
            questionContainer.classList.add("question");
            questionContainer.setAttribute("id", `question-${questionCount}`);

            questionContainer.innerHTML = `
                <input type="text" name="question-${questionCount}" placeholder="Enter question" required>
                <div class="options-container">
                    <div class="option">
                        <input type="radio" name="correct-${questionCount}" value="0" required>
                        <input type="text" name="option-${questionCount}-0" placeholder="Option 1" required>
                    </div>
                    <div class="option">
                        <input type="radio" name="correct-${questionCount}" value="1">
                        <input type="text" name="option-${questionCount}-1" placeholder="Option 2" required>
                    </div>
                    <div class="option">
                        <input type="radio" name="correct-${questionCount}" value="2">
                        <input type="text" name="option-${questionCount}-2" placeholder="Option 3" required>
                    </div>
                    <div class="option">
                        <input type="radio" name="correct-${questionCount}" value="3">
                        <input type="text" name="option-${questionCount}-3" placeholder="Option 4" required>
                    </div>
                </div>
                <button type="button" onclick="removeQuestion(${questionCount})">Remove Question</button>
            `;

            document.getElementById("questions-container").appendChild(questionContainer);

            document.getElementById("submit-btn").style.display = "block";
        });

        function removeQuestion(id) {
            document.getElementById(`question-${id}`).remove();
            questionCount--;
            if (questionCount === 0) {
                document.getElementById("submit-btn").style.display = "none";
            }
        }
        
        document.getElementById("quiz-form").addEventListener("submit", async function (event) {
            event.preventDefault();
            const formData = new FormData(this);    
            const quizData = [];
            const topic = document.getElementById("topic").value;
            for (let i = 1; i <= questionCount; i++) {
                const question = formData.get(`question-${i}`);
                const options = [
                    formData.get(`option-${i}-0`),
                    formData.get(`option-${i}-1`),
                    formData.get(`option-${i}-2`),
                    formData.get(`option-${i}-3`),
                ];
                const correctoption = parseInt(formData.get(`correct-${i}`));

                if (question && correctoption !== null) {
                    quizData.push({ question, options, correctoption });
                }
            }
            const quizPayload = {
                questions: quizData,
                topic:topic
            };
            const k = document.getElementById("msg");
            try {
                const response = await fetch(`/generatequiz?topic=${topic}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(quizPayload),
                });

                const result = await response.json();
                if (response.ok) {
                    k.innerHTML= `Your quiz code : ${result.number}`;
                } else {
                    k.innerHTML= `Error generating quiz`;
                }
            } catch (error) {
                console.error("Error submitting quiz:", error);
            }
        });

    </script>

</body>

</html>
