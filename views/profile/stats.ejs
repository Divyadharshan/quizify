<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>1v1 Stats - <%=username%></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="shortcut icon" href="/logo.png" type="image/x-icon">

  <style>
    :root {
      --black: #000000;
      --white: #ffffff;
      --darkest: #101010;
      --darker: #16171A;
      --dark: #A3AFBF;
      --primary: #7B16FF;
      --primary-trans: rgba(123, 22, 255, 0.4);
      --bg: var(--darkest);
      --color: var(--white);
      --surface: var(--darker);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: var(--bg);
      color: var(--color);
      font-family: 'Arial', sans-serif;
      text-align: center;
      padding-top: 100px;
    }

    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      background: var(--surface);
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      z-index: 1000;
    }

    .navbar h2 {
      color: var(--primary);
      margin: 0;
    }

    .navbar a {
      color: var(--white);
      text-decoration: none;
      margin-left: 1rem;
      transition: color 0.3s;
    }

    .navbar a:hover {
      color: var(--primary);
    }

    .chart-container {
      max-width: 360px;
      margin: auto;
      background-color: var(--surface);
      border-radius: 20px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    h2 {
      margin-bottom: 20px;
      color: var(--primary);
    }
    .start-btn {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: var(--primary);
  color: white;
  text-decoration: none;
  border-radius: 10px;
  font-weight: bold;
  transition: background-color 0.3s;
}

.start-btn:hover {
  background-color: #5f12cc;
}
.form-container {
  margin-top: 30px;
}

.form-container h3 {
  color: var(--primary);
  margin-bottom: 12px;
  font-size: 18px;
}

.form-row {
  display: flex;
  justify-content: center;
  gap: 12px;
}

.result-icon {
  font-size: 18px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: gray;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 900;
  box-shadow: 0 0 8px rgba(255,255,255,0.3);
}

.result-win {
  background-color: green;
}

.result-draw {
  background-color: #888;
}

.result-loss {
  background-color: red;
}


  </style>
</head>
<body>
  <%- include("../partials/loader") %>
  <div class="navbar">
    <h2>QUIZIFY</h2>
    <% if(currentUser){ %>
      <div>
        <a href="/"><i class="fa-solid fa-house"></i> Home</a>
        <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
      </div>
    <% } else { %>
      <div>
        <a href="/login"><i class="fa fa-sign-in"></i> Login</a>
        <a href="/register"><i class="fa fa-user-plus"></i> Register</a>
      </div>
    <% } %>
  </div>

  <% if (won === 0 && lost === 0 && draw === 0) { %>
  <div class="chart-container">
    <h2>1v1 Stats - <%=username%></h2>
    <br>
    <p style="font-size: 18px; color: var(--white); margin-top: 20px;">No Stats Found!</p>
    <a href="/challenge" class="start-btn">Start Challenging</a>
    </div>
<% } else { %>
  <div class="chart-container">
    <h2>1v1 Stats - <%=username%></h2>
    <canvas id="donutChart"></canvas>
  </div>
  <div class="form-container">
  <h3>Last 5 Results</h3>
  <div class="form-row" id="formRow"></div>
</div>

<% } %>

  <script>
  const ctx = document.getElementById('donutChart').getContext('2d');
  Chart.register(ChartDataLabels); // Register the plugin

  new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Won', 'Draw', 'Lost'],
      datasets: [{
        data: [<%=won%>, <%=draw%>, <%=lost%>],
        backgroundColor: ['green', 'gray', 'red'],
        borderColor: ['black', 'black', 'black'],
        borderWidth: 2
      }]
    },
    options: {
      cutout: '60%',
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            color: 'white',
            font: {
              size: 12
            }
          }
        },
        datalabels: {
          color: 'white',
          font: {
            weight: 'bold',
            size: 14
          },
          formatter: (value, ctx) => {
            return value > 0 ? value : '';
          }
        }
      }
    },
    plugins: [ChartDataLabels]
  });
</script>
<script>

  const last5Results = <%- JSON.stringify(recentform) %>;
  const formRow = document.getElementById("formRow");

  last5Results.forEach(result => {
    const span = document.createElement('span');
    span.classList.add('result-icon');

    if (result === 1) {
      span.textContent = ' ✔ ';
      span.classList.add('result-win');
    } else if (result === -1 ) {
      span.textContent = '✖';
      span.classList.add('result-loss');
    } else {
      span.textContent = '━';
      span.classList.add('result-draw');
    }
    formRow.appendChild(span);
  });
</script>

</body>
</html>