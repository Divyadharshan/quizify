<% if(success && success.length) { %>
<div class="quizify-alert quizify-success fade-in" role="alert" id="s-alert">
    <span><%= success %></span>
    <button type="button" class="close-btn" data-bs-dismiss="alert" onclick="closeAlert('s-alert')" aria-label="Close">&times;</button>
</div>
<% } %>

<% if(error && error.length) { %>
<div class="quizify-alert quizify-error fade-in" role="alert" id="e-alert">
    <span><%= error %></span>
    <button type="button" class="close-btn" data-bs-dismiss="alert" onclick="closeAlert('e-alert')" aria-label="Close">&times;</button>
</div>
<% } %>
<script>
    function closeAlert(id) {
        document.getElementById(id).style.display = "none";
    }
</script>
<style>
.quizify-alert {
    max-width: 80%;
    margin: 50px auto;
    padding: 15px 20px;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 500;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.5s ease-in-out;
}

.quizify-success {
    background: linear-gradient(135deg, #00c853, #66bb6a);
    color: #fff;
}

.quizify-error {
    background: linear-gradient(135deg, #d32f2f, #ff5252);
    color: #fff;
}

.close-btn {
    background: none;
    border: none;
    color: #fff;
    font-size: 25px;
    justify-content: flex-end;
    cursor: pointer;
}

.fade-in {
    animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
