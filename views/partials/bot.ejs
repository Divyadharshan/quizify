<div id="chatbot"></div>

<script>
  const host = document.getElementById('chatbot');
  const shadowRoot = host.attachShadow({ mode: 'open' });

  const botHTML = `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
      #chatbot-container {
        position: fixed;
        bottom: 80px;
        right: 20px;
        width: 340px;
        max-height: 500px;
        background: white;
        color: black;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        display: none;
        flex-direction: column;
        overflow: hidden;
        z-index: 9999;
        font-family: 'Arial', sans-serif;
      }

      #chat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1px 10px;
        background-color: #7B16FF;
        color: white;
        font-weight: 600;
        font-size: 16px;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
      }

      #chat-messages {
        display:flex;
        flex-direction:column;
        height: 280px;
        overflow-y: auto;
        padding: 12px 14px;
        background-color: #fafafa;
      }

      #chat-messages div {
        margin-bottom: 10px;
        line-height: 1.4;
      }

      #typing-indicator {
        font-style: italic;
        color: #999;
        padding-left: 14px;
      }

      #chat-input-area {
        display: flex;
        border-top: 1px solid #eee;
      }

      #chat-input {
        flex: 1;
        padding: 0 14px;
        font-size: 15px;
        outline: none;
        border: none;
        height: 50px;
        color: black;
        background-color: white;
        box-sizing: border-box;
      }

      #send-btn {
        width: 60px;
        height: 50px;
        background: #7B16FF;
        color: white;
        border: none;
        font-size: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      #chat-icon {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: #7B16FF;
        color: white;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 50px;
        font-size: 28px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
      }
    </style>

    <button id="chat-icon">ðŸ¤–</button>

    <div id="chatbot-container">
      <div id="chat-header">
        <span style="display: inline-flex; align-items: center;">
        QBot<img src="logo.png" width="50" height="50" style="vertical-align: middle;">
        </span>
        <span style="font-size: 24px; cursor: pointer;" id="close-btn">&times;</span>
      </div>
      <div id="chat-messages"><div style="display: flex; justify-content: flex-start;align-items: left;">
        <div style="
          background-color: #f1f0f0;
          padding:2px 10px;
          border-radius: 12px;
          max-width: 70%;
          white-space: pre-wrap;
          word-break: break-word;
          text-align: left;
          font-size:14px;
        ">
        <b>QBot: </b>Hey <%= currentUser.username %>!ðŸ˜Š I'm QBot. You can ask me things like "go to my profile", "open today's quiz", to help you navigate Quizify. I'm here to make your experience easier and more fun!
        </div>
      </div></div>
      <div id="typing-indicator" style="display: none;">Quizzy is typing...</div>
      <div id="chat-input-area">
        <input type="text" id="chat-input" placeholder="Type a message..." />
        <button id="send-btn"><i class="fas fa-paper-plane"></i></button>
      </div>
    </div>
  `;

  shadowRoot.innerHTML = botHTML;

  function toggleChat() {
    const chatbox = shadowRoot.getElementById("chatbot-container");
    chatbox.style.display = chatbox.style.display === "block" ? "none" : "block";
  }

  shadowRoot.getElementById("chat-icon").addEventListener("click", toggleChat);
  shadowRoot.getElementById("close-btn").addEventListener("click", toggleChat);

  shadowRoot.getElementById("send-btn").addEventListener("click", sendMessage);
  shadowRoot.getElementById("chat-input").addEventListener("keypress", (e) => {
    if (e.key === "Enter") sendMessage();
  });

  async function sendMessage() {
    const input = shadowRoot.getElementById("chat-input");
    const message = input.value.trim();
    if (!message) return;

    const messagesDiv = shadowRoot.getElementById("chat-messages");
    const typingIndicator = shadowRoot.getElementById("typing-indicator");

    messagesDiv.innerHTML += `
    <div style="display: flex; justify-content: flex-end;align-items: left;">
      <div style="
        background-color: #f1f0f0;
        padding:2px 10px;
        border-radius: 12px;
        max-width: 70%;
        white-space: pre-wrap;
        word-break: break-word;
        text-align: left;
        font-size:14px;
      ">
        <b>You: </b> ${message}
      </div>
    </div>
  `;

    input.value = "";
    typingIndicator.style.display = "block";
    messagesDiv.scrollTop = messagesDiv.scrollHeight;

    try {
      const response = await fetch('/chat', {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ messages: message })
      });

      const data = await response.json();
      typingIndicator.style.display = "none";

      const navigatepage = data.reply.trim().toLowerCase();
      console.log(navigatepage);
      var flag = false;
      if (navigatepage === "daily quiz") {
        window.location.href = `/show`;
        flag = true;
      }
      else if (navigatepage === "ai quiz") {
        window.location.href = `/createquiz`;
        flag = true;
      }
      else if (navigatepage === "user quiz") {
        window.location.href = `/buildquiz`;
        flag = true;
      }
      else if (navigatepage === "daily leaderboard") {
        window.location.href = `/leaderboard?type=daily`;
        flag = true;
      }
      else if (navigatepage === "all time leaderboard") {
        window.location.href = `/leaderboard?type=alltime`;
        flag = true;
      }
      else if (navigatepage === "profile") {
        window.location.href = `/profile/<%=currentUser.username%>`;
        flag = true;
      }
      else if (navigatepage === "userquizzes") {
        window.location.href = `/viewquizzes/<%=currentUser._id%>`;
        flag = true;
      }

      if (flag) {
        messagesDiv.innerHTML += `
    <div style="display: flex; justify-content: flex-start; align-items: left;">
      <div style="
        background-color: #f1f0f0;
        padding: 2px 10px;
        border-radius: 12px;
        max-width: 70%;
        white-space: pre-wrap;
        word-break: break-word;
        text-align: left;
        font-size: 14px;
      ">
        <b>QBot: </b> going to ${data.reply}...
      </div>
    </div>
  `;
      } else {
        messagesDiv.innerHTML += `
    <div style="display: flex; justify-content: flex-start; align-items: left;">
      <div style="
        background-color: #f1f0f0;
        padding: 2px 10px;
        border-radius: 12px;
        max-width: 70%;
        white-space: pre-wrap;
        word-break: break-word;
        text-align: left;
        font-size: 14px;
      ">
        <b>Qbot: </b> ${data.reply}
      </div>
    </div>
  `;
      }

      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    } catch (err) {
      typingIndicator.style.display = "none";
      messagesDiv.innerHTML += `
      <div style="display: flex; justify-content: flex-start;align-items: left;">
        <div style="
          background-color: #f8d7da;
          padding:2px 10px;
          border-radius: 12px;
          max-width: 70%;
          white-space: pre-wrap;
          word-break: break-word;
          text-align: left;
          font-size:14px;
        ">
          <b>Qbot :</b> Oops! Something went wrong.
        </div>
      </div>
    `;
    }
  }

</script>